@foreach(var post in Model.AfterApprovalPost)
{
<div class="col-md-12">
<div class="card">
                <div class="card-header">
                   <center> <b>Post</b></center>
                </div>
                <div class="card-body">
                    <p class="card-text">
                        <b>Id:</b> @post.Id <br />
                        <b>Title:</b> @post.Title<br />
                        <b>Description:</b> @post.Description<br />
                        <b>Nick:</b> @post.Author<br />
                        <b>Category:</b> @post.Category<br />
                        <b>Creation Time:</b> @post.CreationTime</p>
<hr />
<form method="post">
   <div class="form-group">
        <input name="commentdescription" class="form-control" placeholder="Type comment here.." /><hr />
    </div>

  <button class="btn btn-success" asp-route-id="@post.Id"> Add comment </button>
  <button class="btn btn-primary">Show comments</button>
</form>
</div>
</div>
</div>

}