@page "/hiddenwiki"
@model FORUM_CZAT.Pages.HiddenWiki.SiteModel
@{
}
<div class="card">
     <div class="card-header">
            <center><b>Add your hidden url and help us build better experience.</b></center>
      </div>
      <div class="card-body">
        <form method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
      <div class="form-group">
        <input name="title" class="form-control" placeholder="Your url here.." />
      </div>
    <div class="py-2">
        <button type="submit" class="btn btn-primary">Send</button>
    </div>
</form>
</div>
</div>

