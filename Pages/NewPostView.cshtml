<div class="card">
                <div class="card-header">
                    <center><b>New Post</b></center>
                </div>
                <div class="card-body">
                   <form method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <input name="title" class="form-control" placeholder="Type title here.." /><hr />
    </div>
  <div class="form-group">
    <textarea class="form-control" name="description" rows="3" placeholder="Type text here.."></textarea> <hr />
  </div>
    <div class="form-group">
        <input name="author" class="form-control" placeholder="Type your nick here.." /><hr />
    </div>
   
    <select class="form-select" name="category">
       <option value="Astronomy">Astronomy</option>
       <option value="CryptoCurrencies">Crypto Currencies</option>
       <option value="Programming">Programming</option>
       <option value="Science">Science</option>
       <option value="Philosophy">Philosophy</option>
       <option value="Movies">Movies</option>
       <option value="Religion">Religion</option>
       <option value="Sport">Sport</option>
   </select>
    <div class="py-2">
        <button type="submit" class="btn btn-primary">Post</button>
       
    </div>
</form> 
<hr />
</div>
</div>

